{
    "name": "@backy/billing",
    "version": "1.0.0",
    "description": "Backy CMS billing integration - Stripe, Paddle, LemonSqueezy adapters",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts",
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "stripe": "^14.0.0"
    },
    "peerDependenciesMeta": {
        "stripe": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "stripe": "^14.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0"
    },
    "keywords": [
        "cms",
        "billing",
        "stripe",
        "subscriptions"
    ],
    "author": "Backy Team",
    "license": "MIT"
}